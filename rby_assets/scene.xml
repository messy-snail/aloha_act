<mujocoinclude>
<!--    <option timestep='0.0025' iterations="50" tolerance="1e-10" solver="Newton" jacobian="dense" cone="elliptic"/>-->

    <asset>
        <mesh file="./assets/tabletop.stl" name="tabletop" scale="0.001 0.001 0.001"/>
        <texture name="plane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512" mark="cross" markrgb=".8 .8 .8"/>
        <material name="plane" reflectance="0.3" texture="plane" texrepeat="1 1" texuniform="true"/>
    </asset>

    <!-- znear는 z flight 문제를 고려해서 설정해야함 -->
    <visual>
        <map fogstart="1.5" fogend="5" force="0.1" znear="0.005"/>
        <quality shadowsize="4096" offsamples="4"/>
        <headlight ambient="0.4 0.4 0.4"/>
    </visual>

    <worldbody>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='-1 -1 1'
               dir='1 1 -1'/>
        <light directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='1 -1 1' dir='-1 1 -1'/>
        <light castshadow="false" directional='true' diffuse='.3 .3 .3' specular='0.3 0.3 0.3' pos='0 1 1'
               dir='0 -1 -1'/>

        <!-- <body name="table" pos="0 -0.6 0.6"> -->
        <body name="table" pos="0 -0.6 0.6">
            <geom group="1" mesh="tabletop" pos="0 0 0" type="mesh" conaffinity="1" contype="1" name="table" rgba="0.2 0.2 0.2 1" />
        </body>

        <geom group="4" name="floor" pos="0 0 0" size="0 0 .25" type="plane" material="plane" condim="1" solimp="0.95 0.99 0.001 0.5 2"/>

        <body name="wall1" pos="0 0 1" euler="1.5708 0 0">
            <geom group="4" mesh="tabletop" pos="0 0 0" type="mesh" conaffinity="1" contype="1" name="wall1" rgba="1 0 0 0.3" />
        </body>
        <body name="wall2" pos="-0.8 -0.6 1" euler="1.5708 1.5708 0">
            <geom group="4" mesh="tabletop" pos="0 0 0" type="mesh" conaffinity="1" contype="1" name="wall2" rgba="0 1 0 0.3" />
        </body>
        <body name="wall3" pos="0.8 -0.6 1" euler="1.5708 1.5708 0">
            <geom group="4" mesh="tabletop" pos="0 0 0" type="mesh" conaffinity="1" contype="1" name="wall3" rgba="0 0 1 0.3" />
        </body>

        <camera name="left_pillar" pos="-0.7 -0.6 1.0" fovy="78" mode="targetbody" target="table"/>
        <camera name="top" pos="0 -0.6 1.5" fovy="78" mode="targetbody" target="table"/>
        <camera name="angle" pos="0 -1.0 1.3" fovy="78" mode="targetbody" target="table"/>

    </worldbody>



</mujocoinclude>